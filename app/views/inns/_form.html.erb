
<%= form_with(model: @inn) do |f| %>
  <div>
    <%= f.label :brand_name %>
    <%= f.text_field :brand_name %>
  </div>
  <div>
    <%= f.label :corporate_name %>
    <%= f.text_field :corporate_name %>
  </div>
  <div>
    <%= f.label :registration_number %>
    <%= f.text_field :registration_number %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
    <div>
    <%= f.label :address %>
    <%= f.text_field :address %>  
  </div>
  <div>
    <%= f.label :state %>
    <%= f.text_field :state %>
  </div>
    <div>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </div>
  <div>
    <%= f.label :neighborhood %>
    <%= f.text_field :neighborhood %>
  </div>
  <div>
    <%= f.label :zip_code %>
    <%= f.text_field :zip_code %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :payment_methods %>
    <%= f.text_field :payment_methods %>
  </div>
  <div>
    <%= label_tag 'Aceita Pets?' %>
    <%= f.radio_button :accepts_pets, true %>
    <%= f.label :accepts_pets_true%>
    <%= f.radio_button :accepts_pets, false %>
    <%= f.label :accepts_pets_false %>
  </div>
  <div>
    <%= f.label :usage_policies %>
    <%= f.text_field :usage_policies %>
  </div>
  <div>
    <%= f.label :check_in %>
    <%= f.time_field :check_in %>

    <%= f.label :check_out %>
    <%= f.time_field :check_out %>
  </div>

  <% if action_name == 'edit' %>
    <div>
      <%= f.label :inn_photos, 'Adicionar Fotos' %>
      <%= f.file_field :inn_photos, multiple: true %>
    </div>
  <% end %>

  <%= f.submit 'Salvar' %>
<% end %>
