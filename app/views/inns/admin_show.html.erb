<%= render 'inn' %>

<div>
  <% if @inn.inactive? %>
    <%= button_to 'Tornar Ativa', active_inn_path(@inn.id) %>
  <%  else %>
    <%= button_to 'Tornar Inativa', inactive_inn_path(@inn.id) %>
  <% end %>
</div>

<div>
  <h3>Quartos de <%= @inn.brand_name %></h3>

  <div>
    <%= link_to 'Adicionar novo quarto', new_inn_room_path(inn_id: @inn.id) %>
  </div>
</div>

<div>
  <%= link_to 'Editar', edit_inn_path(@inn.id) %>
</div>

<div>
  <%= link_to 'Voltar', root_path %>
</div>
